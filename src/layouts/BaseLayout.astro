---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Ayumu Kukutsu | Junior Engineer",
  description = "Ayumu Kukutsuのポートフォリオサイト。ソフトウェアエンジニアとしての経歴やプロジェクト、技術ブログを公開しています。",
} = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/github-icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @import "../index.css";
</style>
